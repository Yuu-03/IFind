<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AppreciationAdminView"
    android:background="@drawable/gradient_bg" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_full"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/shape_for_post"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image" />

                <TextView
                    android:id="@+id/shape"
                    android:layout_width="match_parent"
                    android:layout_height="700dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="355dp"
                    android:layout_marginEnd="-1dp"
                    android:background="@drawable/shape_for_post" />

                <TextView
                    android:id="@+id/shape_descrip"
                    android:layout_width="317dp"
                    android:layout_height="450dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="43dp"
                    android:layout_marginTop="480dp"
                    android:layout_marginEnd="44dp"
                    android:background="@drawable/shape_descrip"
                    android:gravity="center" />

                <androidx.constraintlayout.widget.Group
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="item_loc,item_time,item_date,item_desc,item_name" />

                <TextView
                    android:id="@+id/AppreUserCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_loc6"
                    android:layout_alignStart="@+id/shape_descrip"
                    android:layout_alignEnd="@+id/shape_descrip"
                    android:layout_alignBottom="@+id/shape_descrip"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="53dp"
                    android:text="caption"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/personNameAppreUser"
                    android:layout_width="317dp"
                    android:layout_height="65dp"
                    android:layout_alignTop="@+id/shape"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="43dp"
                    android:layout_marginTop="33dp"
                    android:layout_marginEnd="43dp"
                    android:background="@drawable/shape_for_detail_post"
                    android:gravity="center"
                    android:text="Full Name"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/AppreUserItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_loc2"
                    android:layout_alignStart="@+id/shape_descrip"
                    android:layout_alignEnd="@+id/shape_descrip"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="25dp"
                    android:text="item name"
                    android:textSize="15sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/item_loc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/shape_descrip"
                    android:layout_alignTop="@+id/shape_descrip"
                    android:layout_alignEnd="@+id/shape_descrip"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="Item Found"
                    android:textColor="#4C54F3"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_loc4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/AppreUserDepType"
                    android:layout_alignStart="@+id/shape_descrip"
                    android:layout_alignEnd="@+id/shape_descrip"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:text="Date and Time"
                    android:textColor="#4C54F3"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_loc5"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/AppreUserItemName"
                    android:layout_alignStart="@+id/shape_descrip"
                    android:layout_alignEnd="@+id/shape_descrip"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="54dp"
                    android:text="Department"
                    android:textSize="15sp"
                    android:textColor="#4C54F3"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/item_loc6"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/AppreUserDateTime"
                    android:layout_alignStart="@+id/shape_descrip"
                    android:layout_alignEnd="@+id/shape_descrip"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="54dp"
                    android:text="Appreciation"
                    android:textColor="#4C54F3"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/AppreUserDepType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_loc5"
                    android:layout_alignStart="@+id/shape_descrip"
                    android:layout_alignEnd="@+id/shape_descrip"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="25dp"
                    android:text="Department"
                    android:textSize="15sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/AppreUserDateTime"
                    android:layout_width="276dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_loc4"
                    android:layout_alignStart="@+id/shape_descrip"
                    android:layout_alignEnd="@+id/shape_descrip"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="26dp"
                    android:text="DateTime"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/deleteButt"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@id/shape_descrip"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:gravity="center"
                    android:text="delete"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:cornerRadius="20dp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>