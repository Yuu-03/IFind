<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMain">
    <TextView
        android:id="@+id/hed"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rectangle_blue"
        android:layout_alignParentTop="true"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/admin_settings"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemTextColor="@drawable/admin_nav"
        app:itemIconTint="@drawable/admin_nav"
        android:background="@color/bg_green"
        app:menu="@menu/menu_bar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:layout_below="@+id/hed"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="50dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:elevation="4dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2">
                <Button
                    android:id="@+id/LogView"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/teal_700"
                    android:text="View Activity"
                    android:textColor="@color/white"
                    android:layout_margin="20dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="11sp"/>
                <Button
                    android:id="@+id/ForgottenBox"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/teal_700"
                    android:text="Forgotten Box"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="14dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="11sp"/>

                <Button
                    android:id="@+id/UserDetail"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/teal_700"
                    android:text="User Contacts"
                    android:textColor="@color/white"
                    android:layout_margin="20dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="11sp"/>


            </GridLayout>





        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/adminLogoutButt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/adminLogout"
            android:textStyle="bold"
            android:backgroundTint="#FF1B1B"
            app:cornerRadius="15dp"
            />

    </LinearLayout>

</RelativeLayout>